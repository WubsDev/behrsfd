        <field>Old_Owner__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Oppty_Approval_Status_Pending_Change</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Pending RPSM Approval</label>
        <name>RPSM_Approval</name>
        <rejectionActions>
            <action>
                <name>Opportunity_Approval_Status_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Oppty_Approval_Status_Change_Complete</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>ebuenrostro@behr.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>lhsu@behr.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>rolivieri@behr.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>This will allow the Master Data Manager to update the Opportunity Owner</description>
        <entryCriteria>
            <criteriaItems>
                <field>Ownership_Approval_Opportunity__c.Approval_Status__c</field>
                <operation>equals</operation>
                <value>Pending Ownership Change</value>
            </criteriaItems>
        </entryCriteria>
        <label>Sales Administrator</label>
        <name>Sales_Administrator</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Approval process to approval opportunity ownership changes</description>
    <emailTemplate>Opportunity_Ownership_Templates/Opportunity_Ownership_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>User.IsActive</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Notify_New_Owner_of_Approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Notify_Old_Owner_of_Approval</name>
            <type>Alert</type>
        </action>
        <action>
